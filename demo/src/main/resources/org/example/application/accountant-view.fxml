<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.application.AccountantAppController"
            prefHeight="400.0" prefWidth="700.0"
            stylesheets="@styles/common.css">

    <VBox spacing="10" AnchorPane.topAnchor="0.0" 
          AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0">
          
        <AnchorPane styleClass="header">
            <Label text="Панель бухгалтера"
                   styleClass="header-text"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0"
                   alignment="CENTER"/>
        </AnchorPane>

        <VBox styleClass="container" spacing="15" VBox.vgrow="ALWAYS">
            <Button text="Просмотр платежей" 
                    maxWidth="Infinity"/>
                    
            <Button text="Добавить платеж" 
                    styleClass="button-primary"
                    maxWidth="Infinity"/>
                    
            <Button text="Отчеты" 
                    styleClass="button-secondary"
                    maxWidth="Infinity"/>
                    
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button text="Выйти" 
                    styleClass="button-danger"
                    maxWidth="Infinity"/>
        </VBox>
    </VBox>
</AnchorPane>
