<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="org.example.application.AdminAppController" style="-fx-background-color: white;"
      prefWidth="800" prefHeight="600">
    
    <HBox alignment="CENTER" style="-fx-background-color: #05326D;" prefHeight="60.0" prefWidth="800.0">
        <Label text="МЕНЮ АДМИНИСТРАТОРА" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
    </HBox>

    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: transparent;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox alignment="CENTER" spacing="15" maxWidth="400">
            <Button fx:id="buttonPrintAll" text="Вывести все учетные записи" onAction="#loadAdminPrint" 
                    style="-fx-background-color: #05326D; -fx-text-fill: white;" prefWidth="300" prefHeight="40">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="buttonDelete" text="Удалить учетную запись" onAction="#loadAdminDelete" 
                    style="-fx-background-color: #05326D; -fx-text-fill: white;" prefWidth="300" prefHeight="40">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="buttonAdd" text="Добавить учетную запись" onAction="#loadAdminAdd" 
                    style="-fx-background-color: #05326D; -fx-text-fill: white;" prefWidth="300" prefHeight="40">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="buttonEdit" text="Изменить учетную запись" onAction="#loadAdminEdit" 
                    style="-fx-background-color: #05326D; -fx-text-fill: white;" prefWidth="300" prefHeight="40">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="buttonBack" text="Назад" onAction="#handleBack" 
                    style="-fx-background-color: white; -fx-border-color: #05326D; -fx-text-fill: #05326D;" prefWidth="300" prefHeight="40">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </VBox>
    </VBox>
</VBox>
